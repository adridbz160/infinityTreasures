---
import Layout from "../layouts/Layout.astro";
import "../styles/registroProducto.css";
---

<Layout>
  <main id="formRegProduct">
    <section class="card" aria-labelledby="formTitle">
      <header class="header">
        <div class="header-content">
          <h2 id="formTitle" class="header-title">
            <i class="fas fa-box-open"></i> Registro de Producto
          </h2>
          <div class="header-badge" aria-label="Formulario seguro">
            <i class="fas fa-lock"></i> Seguro
          </div>
        </div>
        <p class="header-subtitle">
          Complete todos los campos para registrar un nuevo producto
        </p>
      </header>
      <!-- Formulario -->
      <form id="productForm" class="form">
        <!-- Nombre -->
        <div class="form-group">
          <label for="productName">
            <i class="fas fa-tag icon-blue"></i> Nombre del Producto <span
              class="required">*</span
            >
          </label>
          <input
            type="text"
            id="productName"
            name="productName"
            placeholder="Ej: Smartphone X Pro"
            required
          />
          <p class="form-hint">Ingrese el nombre completo del producto</p>
        </div>

        <!-- Descripción -->
        <div class="form-group">
          <label for="productDescription">
            <i class="fas fa-align-left icon-blue"></i> Descripción <span
              class="required">*</span
            >
          </label>
          <textarea
            id="productDescription"
            name="productDescription"
            rows="4"
            placeholder="Describa las características principales del producto"
            required></textarea>
          <div class="form-flex">
            <p class="form-hint">Mínimo 50 caracteres</p>
          </div>
        </div>

        <!-- Imagen -->
        <fieldset class="form-group">
          <legend>
            <i class="fas fa-image icon-blue"></i> Imagen del Producto <span
              class="required">*</span
            >
          </legend>
          <div class="image-section">
            <label for="productImage" class="image-upload">
              <i class="fas fa-cloud-upload-alt"></i>
              <span>Seleccionar imagen</span>
              <small>JPG, PNG (Max. 2MB)</small>
            </label>
            <input
              type="file"
              id="productImage"
              name="productImage"
              accept="image/*"
              required
              hidden
            />
            <div class="image-preview-wrapper">
              <img
                id="imagePreview"
                class="preview-image"
                src="#"
                alt="Vista previa de la imagen"
              />
              <button
                type="button"
                id="removeImageBtn"
                class="remove-image-btn hidden"
              >
                <i class="fas fa-trash"></i> Eliminar
              </button>
            </div>
          </div>
        </fieldset>

        <!-- Serie y Marca -->
        <div class="form-grid">
          <div class="form-group">
            <label for="productSerial">
              <i class="fas fa-store icon-blue"></i> Franquicia
            </label>
            <input
              type="text"
              id="productSerial"
              name="productSerial"
              placeholder="Ej: Dragon Ball, Pokémon, Marvel, etc."
            />
          </div>
          <div class="form-group">
            <label for="productBrand">
              <i class="fas fa-copyright icon-blue"></i> Marca <span
                class="required">*</span
              >
            </label>
            <input
              type="text"
              id="productBrand"
              name="productBrand"
              placeholder="Ej: Sony, Samsung, etc."
              required
            />
          </div>
        </div>

        <!-- Categoría y PEGI -->
        <div class="form-grid">
          <div class="form-group">
            <label for="productCategory">
              <i class="fas fa-tags icon-blue"></i> Categoría <span
                class="required">*</span
              >
            </label>
            <select
              id="productCategory"
              name="productCategory"
              class="custom-select"
              required
            >
              <option value="">Seleccione una categoría</option>
              <option value="electronica">Electrónica</option>
              <option value="videojuegos">Videojuegos</option>
              <option value="informatica">Informática</option>
              <option value="hogar">Hogar</option>
              <option value="deportes">Deportes</option>
              <option value="juguetes">Juguetes</option>
              <option value="libros">Libros</option>
              <option value="ropa">Ropa</option>
            </select>
          </div>
          <fieldset class="form-group" aria-labelledby="pegiGroup">
            <legend id="pegiGroup"
              ><i class="fas fa-user-shield icon-blue"></i> Clasificación PEGI</legend
            >
            <div class="pegi-options">
              <label
                ><input type="radio" name="productPEGI" value="3" /> PEGI 3</label
              >
              <label
                ><input type="radio" name="productPEGI" value="7" /> PEGI 7</label
              >
              <label
                ><input type="radio" name="productPEGI" value="12" /> PEGI 12</label
              >
              <label
                ><input type="radio" name="productPEGI" value="16" /> PEGI 16</label
              >
              <label
                ><input type="radio" name="productPEGI" value="18" /> PEGI 18</label
              >
            </div>
          </fieldset>
        </div>

        <!-- Enlace -->
        <div class="form-group">
          <label for="productLink"
            ><i class="fas fa-link icon-blue"></i> Enlace al producto</label
          >
          <div class="url-input">
            <span>https://</span>
            <input
              type="url"
              id="productLink"
              name="productLink"
              placeholder="www.tienda.com/producto"
            />
          </div>
        </div>

        <!-- Términos -->
        <div class="form-checkbox">
          <input type="checkbox" id="terms" name="terms" required />
          <label for="terms">
            Acepto los términos y condiciones
            <p>Confirmo que toda la información proporcionada es correcta.</p>
          </label>
        </div>

        <!-- Botones -->
        <div class="form-buttons">
          <button type="reset" class="btn-reset"
            ><i class="fas fa-eraser"></i> Limpiar</button
          >
          <button type="submit" id="submitBtn" class="btn-submit"
            ><i class="fas fa-save"></i> Registrar Producto</button
          >
        </div>
      </form>
    </section>
  </main>
  <script src="../js/registroProducto.js"></script>
</Layout>
